<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Budmar_app</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Budmar_app.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>   
    <script src='https://cdn.jsdelivr.net/npm/@@fullcalendar/core@6.1.5/locales-all.global.min.js'></script>

    <link rel="stylesheet" href="~/lib/flatpickr/flatpickr.css" />
    <script src="~/lib/flatpickr/flatpickr.js" ></script>
    <script src="~/lib/flatpickr/l10n/pl.js" ></script>
    <link rel="stylesheet" href="~/lib/flatpickr/themes/material_blue.css" />

    <link rel="stylesheet" href="~/lib/bootstrap-table/bootstrap-table.min.css" />

    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-light" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="~/icons/Budmar-logos_transparent-resized.png" alt="Budmar" height="50" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index" style="color:#5065A8"><i class="bi bi-house-door-fill" style="font-size: 2rem; color:#5065A8"></i> Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#5065A8" asp-controller="Contract" asp-action="Index"><i class="bi bi-journals" style="font-size: 2rem; color:#5065A8"></i> Kontrakty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#5065A8" asp-controller="Employee" asp-action="Index"><i class="bi bi-people-fill" style="font-size: 2rem; color:#5065A8"></i> Pracownicy</a>
                        </li>
                    </ul>
                    <div class="d-flex text-center">
                        <div style="margin: 1rem 1rem 1rem 1rem; border:1px solid; padding: 0rem 1rem 0rem 1rem; border-radius:8px; color:#5065A8">
                            <i class="bi bi-person fs-2"></i>
                            <i class="bi bi-box-arrow-in-right fs-2"></i>
                        </div>
                        <div style="border-left:1px solid #5065A8; margin:1rem 1rem 1rem 1rem;"></div>
                        <div class="text-wrap" style="width:10rem; padding-top:1rem">
                            <p class="fs-6 text-center" style="color: #5065A8; font-weight:700">System ewidencji godzin pracy</p>
                        </div>
                        
                    </div>
                </div>

            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Budmar_app - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-maskmoney/jquery.maskMoney.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap-table/bootstrap-table.min.js"></script>
    
    
    <script asp-append-version="true" type="module" src="~/js/site.js"></script>

    <script src="~/lib/bootstrap-table/locale/bootstrap-table-pl-PL.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
